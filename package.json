{
  "name": "whitelist-backend",
  "version": "0.17.2",
  "private": true,
  "engines": {
    "node": "17"
  },
  "description": "The backend server for the whitelist-crypto site",
  "scripts": {
    "start": "node build/main.js",
    "build": "node scripts/build.js",
    "dev": "node scripts/start.js",
    "test": "node scripts/test.js",
    "test:cov": "node scripts/test.js --coverage",
    "lint": "eslint src/**/*.{js,ts}",
    "lint:fix": "eslint --fix src/**/*.{js,ts}"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": "eslint --cache --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/toomuchrice4u/whitelist-backend.git"
  },
  "author": "Lawrence Good",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/toomuchrice4u/whitelist-backend/issues"
  },
  "homepage": "https://github.com/toomuchrice4u/whitelist-backend#readme",
  "jest": {
    "setupFiles": [
      "<rootDir>/config/env.js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*{spec,test}.{js,ts}"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "dependencies": {
    "@sendgrid/mail": "^7.6.2",
    "chalk": "^4.1.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^15.0.0",
    "express": "^4.17.3",
    "express-validator": "^6.14.0",
    "morgan": "^1.10.0",
    "pg": "^8.7.1",
    "rotating-file-stream": "^3.0.3"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.26",
    "@types/pg": "^8.6.4",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.16.0",
    "eslint": "^8.14.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^16.1.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.8",
    "nodemon-webpack-plugin": "^4.7.0",
    "prettier": "^2.6.2",
    "progress-bar-webpack-plugin": "^2.1.0",
    "supertest": "^6.2.2",
    "terser-webpack-plugin": "^5.3.0",
    "ts-jest": "^27.1.4",
    "ts-loader": "^9.2.8",
    "typescript": "^4.6.3",
    "webpack": "^5.68.0",
    "webpack-cli": "^4.9.2",
    "webpack-node-externals": "^3.0.0"
  }
}
