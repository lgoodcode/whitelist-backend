{
   "compilerOptions": {
     "target": "ES2015",
     "module": "es6",
     "strict": true,
     "esModuleInterop": true,
     "skipLibCheck": true,
     "forceConsistentCasingInFileNames": true,
     "lib": ["esnext"],
     "allowJs": true,
     "noEmit": false,
     "moduleResolution": "node",
     "resolveJsonModule": true,
     "isolatedModules": true,
     "baseUrl": "./src",
     "outDir": "./build"
   },
   "include": ["./src"]
}